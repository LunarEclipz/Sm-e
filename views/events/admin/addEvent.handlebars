<div style="padding:10px;">
    <div class="container-fluid navbar-2">
        <h2 class="text-center">Add Events</h2>
    </div>

    <div class="container card text-center shadow-lg bg-white" style="color:#df744a">
        <form action="" method="post" id="addEvent">
            <div class="row mt-4">
                <div class="col-lg-7 ">
                    <div class="form-group">
                        {{!-- Practical 5 Exercise 2: Add a eventName input text here named 'eventName'--}}
                        <label class="font-italic" for="eventName">Event Name</label>
                        <input class="form-control" type="text" name="eventName" id="eventName" required>
                    </div>
                    <div class="form-group mb-4">
                        <label class="font-italic" for="eventDescription">Event Description</label>
                        <textarea class="form-control" id="eventDescription" name="eventDescription" rows="6"
                            required></textarea>
                    </div>
                    <div class="form-group">
                        <label class="font-italic" for="eventCost">Event Cost (Leave blank if event cost is
                            free)</label>
                        <input class="form-control" type="text" name="eventCost" id="eventCost">
                    </div>
                    <div class="form-group">
                        <label class="font-italic" for="eventLocation">Event Location</label>
                        <input class="form-control" type="text" name="eventLocation" id="eventLocation" required>
                    </div>
                </div>
                <div class="col-lg-5">
                    <input type="file" id="posterUpload" name="posterUpload"
                        accept="image/png,image/jpeg,image/jpg,image/gif">
                    <img id="poster" src="/img/default.jpeg" alt="" class="border mt-3 img-thumbnail img-fluid"
                        style="height:45%;width:50%">
                    <input id="posterURL" type="hidden" name="posterURL">
                    <div class="font-weight-bold text-danger small" id="posterErr" style="display:none"></div>
                    <div class="mt-4">    
                        <label class="font-italic">Date of Event</label>
                        <input id="datepicker" width="200" name="eventDate" readonly required />
                    </div>
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="row mb-2">
                    <div class="mx-auto">
                        <label class="font-italic">Event Category</label>
                        <br>
                        {{!-- Practical 5 Exercise 2: Language radio buttons here'--}}
                        <div class="form-check form-check-inline">
                            <input class="form=check-input" type="checkbox" name="categories" value="Depression"
                                onclick="categoryCheck()">
                            <label class="form-check-label" for="depression">Depression</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form=check-input" type="checkbox" name="categories" value="Anxiety"
                                onclick="categoryCheck()">
                            <label class="form-check-label" for="anxiety">Anxiety</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form=check-input" type="checkbox" name="categories" value="Mood Disorder"
                                onclick="categoryCheck()">
                            <label class="form-check-label" for="mood disorder">Mood Disorder</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form=check-input" type="checkbox" name="categories" value="Eating Disorder"
                                onclick="categoryCheck()">
                            <label class="form-check-label" for="eating disorder">Eating Disorder</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form=check-input" type="checkbox" name="categories"
                                value="Post-Traumatic Stress" onclick="categoryCheck()">
                            <label class="form-check-label" for="post-traumatic stress">Post-Traumatic Stress</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form=check-input" type="checkbox" name="categories" value="Social Anxiety"
                                onclick="categoryCheck()">
                            <label class="form-check-label" for="social anxiety">Social Anxiety</label>
                        </div>
                        <p class="font-weight-bold" id="categoryErr" style="display:block; color: #bfd8d2;">
                            Please select at least one category</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class=" col-lg-6">
                            <label for="eventTime" class="font-italic">Event Start Time</label>
                            <input class="form-control" type="time" id="eventTime" name="eventTime" required>
                        </div>
                        <div class="col-lg-6">
                            <label for="eventEndTime" class="font-italic">Event End Time</label>
                            <input class="form-control" type="time" id="eventEndTime" name="eventEndTime" required>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <button id="butAddEvent" type="submit" class="btn btn-orange mb-3" action="/adminEvents/addEvent"
                style="float:right;" disabled><span>Add Event</span>
            </button>
        </form>
    </div>
</div>
<script>
    $('#datepicker').datepicker({
        value: new Date().toLocaleDateString('en-GB'),
        format: 'dd/mm/yyyy',
        uiLibrary: 'bootstrap4',
    });
</script>