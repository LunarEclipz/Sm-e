<h1 class="display-2 text-light">{{title}}</h1>

<div class="container-fluid shadow p-3 mb-5 bg-white rounded border border-secondary" style="height: 600px; background-image: url('/img/corkboard.jpg'); border-width:4px; !important;">

	<button type="button" class="btn btn-dark btn-lg " data-toggle="modal" data-target="#addModal" style="position: relative; top: 520px;"><strong>+</strong></button>
	
		<div class="modal fade" id="addModal" role="dialog">
			<div class="modal-dialog" role="document">
			
			<!-- Modal content-->
			<div class="modal-content">
				
				<div class="modal-header text-center">
					<h4 class="modal-title w-100 font-weight-bold"><i class="far fa-sticky-note"></i> New Note</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>

				<div class="modal-body">
					<div class="md-form mb-5">				
						<label for="noteText">Note Text</label>
						<textarea class="form-control" id="noteText" rows="3"></textarea>					
					</div>
				</div>

				<div class="modal-footer justify-content-start">
					<button class="btn btn-primary btn-md">Create</button>
				</div>

			</div>
			
			</div>
		</div>


</div>
