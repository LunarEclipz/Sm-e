<div class="wrapper">
  <!-- Sidebar  -->
  <nav id="sidebar">
    <div class="sidebar-header">
      <h3>Journal.</h3>
    </div>

    <ul class="list-unstyled">
      <li class="active">
        <a href="/journal/calendar">View All Entries</a>
      </li>
      <li>
        <a href="/journal/newEntry">Write A New Entry</a>
      </li>
      <li>
        <a href="#trackerSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Trackers</a>
        <ul class="collapse list-unstyled" id="trackerSubmenu">
          <li>
            <a href="/journal/moodTracker">Mood Tracker</a>
          </li>
          <li>
            <a href="/journal/emotionTracker">Emotion Tracker</a>
          </li>
        </ul>
      </li>
    </ul>
  </nav>

  <!-- Page Content  -->
  <div id="content">

    <nav class="navbar-2 navbar-expand-lg">
      <div class="container-fluid">

        <button type="button" id="sidebarCollapse" class="btn btn-green">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <h2 class="text-center">Entries</h2>
      </div>
    </nav>

    <div class="container text-center">
      <div class="card-columns">
        {{#each Journal}}


        <div class="card">
          {{!-- <img class="card-img-top" src="..." alt="Card image cap"> --}}
          <div class="card-body card-journal">
            <h4 class="card-title">{{title}}</h4>
            <h6 class="text-muted">{{date}}</h6>
            <p class="card-text">Mood: {{mood}}</p>
            <p class="card-text">Emotion: {{emotion}}</p>
            <button type="button" class="btn btn-md btn-block btn-yellowalt" data-toggle="modal"
              data-target="#entries{{id}}">View</button>
          </div>
        </div>

        <div class="modal fade" id="entries{{id}}" role="dialog">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">{{title}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>

              <!-- Modal body -->
              <div class="modal-body">
                <h6 class="text-muted">{{date}}</h6>
                <p>Mood: {{mood}} </p>
                <p>Emotion: {{emotion}} </p>
                <div class="my-auto">
                  <p> {{entry}} </p>
                </div>
              </div>

              <!-- Modal footer -->
              <div class="modal-footer">
                <form action="/journal/deleteEntry/{{id}}" method="POST">
                  <button class="btn btn-danger ml-2" type="submit"> <i class="fas fa-trash-alt"></i> </button>
                </form>
                <a href="/journal/updateEntry/{{id}}">
                  <button type="button" class="btn btn-yellowalt ml-2"> <i class="fas fa-pencil-alt"></i></button>
                </a>
              </div>
            </div>
          </div>
          <br>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function () {
    $('#sidebarCollapse').on('click', function () {
      $('#sidebar, #content').toggleClass('active');
      $(this).toggleClass('active');
      $('.collapse.in').toggleClass('in');
      $('a[aria-expanded=true]').attr('aria-expanded', 'false');
    });
  });
</script>
