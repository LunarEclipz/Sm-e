<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container">
    <div class="row">
        <div class="col-md-3 ">
            <div class="list-group ">
                <a href="/user/viewprofile" class="list-group-item list-group-item-action">My Profile</a>                
                <a href="#" class="list-group-item list-group-item-action active">Update Profile</a>
                <a href="/user/changepwd" class="list-group-item list-group-item-action"> Change Password</a>
                <a href="/" class="list-group-item list-group-item-action"> Delete Account</a>



            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Update Profile</h4>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <form action = "/user/updateprofile" method="post">
                                <div class="form-profile-group row">
                                    <label for="username" class="col-4 col-form-label">Username</label>
                                    <div class="col-8">
                                        <input id="username" name="username" value={{user.name}}
                                            class="form-control here" required="required" type="text" readonly>
                                    </div>
                                </div>

                                <br>

                                <div class="form-profile-group row">
                                    <label for="name" class="col-4 col-form-label">First Name</label>
                                    <div class="col-8">
                                        <input id="name" name="name" placeholder="First Name" class="form-control here"
                                            type="text">
                                    </div>
                                </div>

                                <br>

                                <div class="form-profile-group row">
                                    <label for="lastname" class="col-4 col-form-label">Last Name</label>
                                    <div class="col-8">
                                        <input id="lastname" name="lastname" placeholder="Last Name"
                                            class="form-control here" type="text">
                                    </div>
                                </div>

                                <br>

                                <div class="form-profile-group row">
                                    <label for="email" class="col-4 col-form-label">Email</label>
                                    <div class="col-8">
                                        <input id="email" name="email" value={{user.email}} class="form-control here"
                                            required="required" type="text" readonly>
                                    </div>
                                </div>

                                <br>

                                <div class="form-profile-group row">
                                    <div class="offset-4 col-12">
                                        <button name="submit" type="submit" class="btn btn-primary">Update My
                                            Profile</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>