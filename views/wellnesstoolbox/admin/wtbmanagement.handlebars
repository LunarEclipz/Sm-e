					<p>Are you sure you want to delete this Article?
					</p>
				</div>
			</div>
			<div class="modal-footer">
				<button class="btn btn-secondary btn-md" data-dismiss="modal">Cancel</button>
				<a class="btn btn-danger btn-md" href="/wellnesstoolbox/admin/wtbmanagement/delete/{{id}}">Delete</a>
			</div>

		</div>

	</div>
</div>
{{/each}}
{{/if}}

