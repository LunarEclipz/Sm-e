<!--addModal-->
<div class="modal fade" id="addModal" role="dialog">
	<div class="modal-dialog" role="document">

		<div class="modal-content">

			<div class="modal-header text-center">
				<h4 class="modal-title w-100 font-weight-bold"><i class="far fa-newspaper"></i> New Article</h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>

			<form action="/wellnesstoolbox/admin/wtbmanagement" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
				<div class="modal-body">
					<div class="md-form mb-3">
						<label for="Category">Category</label>
						<select name="Category" class="form-control" id="Category">
							<option value="Meditation">Meditation</option>
							<option value="Video">Video</option>
							<option value="Music">Music</option>
							<option value="Workout">Workout</option>
							<option value="Depression Tips">Depression Tips</option>
						</select>
					</div>
					<div class="md-form mb-3">
						<label for="Title">Title</label>
						<input type="text" name="Title" value="" class="form-control" id="Title" maxlength="12"
							required>
					</div>
					<div class="md-form mb-3">
						<label for="Description">Description</label>
						<textarea name="Description" class="form-control" id="noteText" rows="3" required></textarea>
					</div>
					<div class="md-form mb-3">
						<label for="Link">URL Link</label>
						<input type="url" name="URL" class="form-control" id="Link"
							placeholder="https://www.google.com/" required>
					</div>
					<div class="md-form mb-5">
						<label for="Thumbnail">Thumbnail</label>
						<input type="file" name="Thumbnail" class="form-control-file" id="Thumbnail"
							accept="image/png,image/jpeg,image/jpg,image/gif">
					</div>
				</div>

				<div class="modal-footer">
					<button id="createbutton" class="btn btn-primary btn-md btn-block">Create</button>
				</div>
			</form>

		</div>

	</div>
</div>

<!--deleteModal-->
