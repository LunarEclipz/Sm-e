<h1 class="display-2">{{Title}}</h1>

<section id="articles">
	<div id="articles" class="card text-center shadow-lg bg-white">
		<div class="card-header">
			<ul class="nav nav-pills card-header-pills">
				<li class="nav-item flex-fill">
					<a class="nav-link active" href="#meditation" data-toggle="tab">Meditation</a>
				</li>
				<li class="nav-item flex-fill">
					<a class="nav-link" href="#video" data-toggle="tab">Video</a>
				</li>
				<li class="nav-item flex-fill">
					<a class="nav-link" href="#music" data-toggle="tab">Music</a>
				</li>
				<li class="nav-item flex-fill">
					<a class="nav-link" href="#workout" data-toggle="tab">Workout</a>
				</li>
				<li class="nav-item flex-fill">
					<a class="nav-link" href="#depressiontips" data-toggle="tab">Depression Tips</a>
				</li>
			</ul>
		</div>

		<div class="card-body tab-content">
			<div id="meditation" class="tab-pane show active fadeIn" role="tabpanel">
				<div class="row">
					<div class="col-2">
					</div>
					<div class="col-8">
						<h4 class="display-4">Meditation</h4>
					</div>
					<div class="col-2 my-auto">
						<a href="/wellnesstoolbox/admin/wtbmanagement" class="btn btn-orange">Go to Admin Page
						</a>
					</div>
				</div>
				<hr class="shadow-none" style="background-color: #d7d7d7">
				<div class="row">
					<div class="d-flex col-10">
						<a href="/wellnesstoolbox/admin/wtbmanagement" class="btn btn-orange">Go to Admin Page
						</a>
					</div>
					<div class="col-2">
						<select class="form-control" id="sortBy">
							<option>Sort By:</option>
							<option>Most Viewed</option>
							<option>Least Viewed</option>
							<option>Latest First</option>
							<option>Oldest First</option>
						</select>
					</div>
				</div>


				<div class="row">

					{{#if medArticle}}
					{{#each medArticle}}
					<div class="col-12 mt-4 col-md-4 col-lg-3 d-flex align-items-stretch">
						<div class="card bg-white">
							<div class="view overlay">
								<img class="card-img-top" id="displayThumbnail" src="{{thumbnail}}" height="200px"
									width="200px">
							</div>
							<div class="card-body">
								<h4 class="card-title">{{title}}</h4>
								<p class="card-text">{{description}}
								</p>
								<a href="{{link}}" class="btn btn-primary btn-block">Read more</a>
							</div>
							<div class="card-footer">
								<p>Last updated: {{date}}</p>
							</div>
						</div>
					</div>
					{{/each}}
					{{else}}
					<div>
						No article available.
					</div>
					{{/if}}

				</div>
			</div>

