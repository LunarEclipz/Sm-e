<h1 class="display-2 text-light">{{title}}</h1>

<section id="utilities">
	<div id="utilities" class="card text-center shadow-lg bg-white">
		<div class="card-header">
			<ul class="nav nav-pills card-header-pills">
				<li class="nav-item flex-fill">
					<a class="nav-link active" href="#meditation" data-toggle="tab">Meditation</a>
				</li>
				<li class="nav-item flex-fill">
					<a class="nav-link" href="#video" data-toggle="tab">Video</a>
				</li>
				<li class="nav-item flex-fill">
					<a class="nav-link" href="#music" data-toggle="tab">Music</a>
				</li>
				<li class="nav-item flex-fill">
					<a class="nav-link" href="#workout" data-toggle="tab">Workout</a>
				</li>
				<li class="nav-item flex-fill">
					<a class="nav-link" href="#depressiontips" data-toggle="tab">Depression Tips</a>
				</li>
			</ul>
		</div>

		<div class="card-body tab-content">
			<div id="meditation" class="tab-pane show active fadeIn" role="tabpanel">
				<h4 class="display-4">Meditation</h4>
				<hr class="shadow-none" style="background-color: #d7d7d7">

				<div class="card w-25 bg-white mt-3">
					<div class="view overlay">
						<img class="card-img-top" src="/img/478breathing.jpg">
					</div>
					<div class="card-body">
						<h4 class="card-title">4-7-8 Breathing</h4>
						<p class="card-text">This breathing pattern aims to reduce anxiety or help people get to sleep.
						</p>
						<a href="https://curiosity.com/topics/the-4-7-8-breathing-technique-will-help-you-get-to-sleep-faster-curiosity/" class="btn btn-primary">Read more</a>
					</div>
				</div>			
			</div>

			<div id="video" class="tab-pane show fadeIn" role="tabpanel">
				<h4 class="display-4">Video</h4>
				<hr class="shadow-none" style="background-color: #d7d7d7">

				<div class="card w-25 bg-white mt-3">
					<div class="view overlay">
						<img class="card-img-top" src="/img/asmrhaircut.jpg">
					</div>
					<div class="card-body">
						<h4 class="card-title">ASMR Haircut</h4>
						<p class="card-text">Sleep inducing haircut video.</p>
						<a href="https://www.youtube.com/watch?v=gf_MqDBBMPI" class="btn btn-primary">Read more</a>
					</div>
				</div>
			</div>

			<div id="music" class="tab-pane show fadeIn" role="tabpanel">
				<h4 class="display-4">Music</h4>
				<hr class="shadow-none" style="background-color: #d7d7d7">

				<div class="card w-25 bg-white mt-3">
					<div class="view overlay">
						<img class="card-img-top" src="/img/guitarmusic.jpg">
					</div>
					<div class="card-body">
						<h4 class="card-title">Relaxing Guitar Music</h4>
						<p class="card-text">Stress relieving guitar music.</p>
						<a href="https://www.youtube.com/watch?v=j4OuCMnY43E" class="btn btn-primary">Read more</a>
					</div>
				</div>
			</div>

			<div id="workout" class="tab-pane show fadeIn" role="tabpanel">
				<h4 class="display-4">Workout</h4>
				<hr class="shadow-none" style="background-color: #d7d7d7">

				<div class="card w-25 bg-white mt-3">
					<div class="view overlay">
						<img class="card-img-top" src="/img/workoutfortwo.jpg">
					</div>
					<div class="card-body">
						<h4 class="card-title">Workout for two</h4>
						<p class="card-text">Whether you want to shed some fat, sculpt muscle, improve fitness or simply play – here’s a great 15-minute whole body workout designed for two.</p>
						<a href="https://evofitness.ch/workout-for-two/" class="btn btn-primary">Read more</a>
					</div>
				</div>
			</div>

			<div id="depressiontips" class="tab-pane show fadeIn" role="tabpanel">
				<h4 class="display-4">Depression Tips</h4>
				<hr class="shadow-none" style="background-color: #d7d7d7">

				<div class="card w-25 bg-white mt-3">
					<div class="view overlay">
						<img class="card-img-top" src="/img/depressiontips.jpg">
					</div>
					<div class="card-body">
						<h4 class="card-title">Depression Tips</h4>
						<p class="card-text">Effective tips for coping with depression.</p>
						<a href="https://www.verywellmind.com/tips-for-living-with-depression-1066834" class="btn btn-primary">Read more</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>